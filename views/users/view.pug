extends ../layouts/common.pug
block content
  .container
    h1=  user.name
    p= user.book
      if errors
        each error in errors
          .alert.alert-danger= error
      form(method="POST")
        .form-group
          label Name:
          input.form-control(type="text", name="name")
          label Book:
          select.form-control(name="book")
            each book in books
              option= book.title
          button Update